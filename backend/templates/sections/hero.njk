<div class="hero-content">
  {% if section.props.eyebrow %}
    <p class="hero-eyebrow">{{ section.props.eyebrow }}</p>
  {% endif %}
  <h1>{{ section.props.title }}</h1>
  {% if section.props.subtitle %}
    <p class="hero-subtitle">{{ section.props.subtitle }}</p>
  {% endif %}
  {% if section.props.cta %}
    <a class="hero-cta" href="{{ section.props.ctaLink or '#' }}">{{ section.props.cta }}</a>
  {% endif %}
</div>
