<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {% set seoTitle = page.seo.title if page.seo and page.seo.title else page.title %}
    {% set seoDescription = page.seo.description if page.seo and page.seo.description else '' %}
    <title>{{ seoTitle or 'Page' }} â€“ {{ site.title or 'Site' }}</title>
    {% if seoDescription %}
    <meta name="description" content="{{ seoDescription }}" />
    {% endif %}
    {# US9.B1 - noindex meta for non-indexed pages #}
    {% set globalIndexDefault = site.seo.indexAllPagesByDefault if site.seo and site.seo.indexAllPagesByDefault is defined else true %}
    {% set pageIndexed = page.seo.indexed if page.seo and page.seo.indexed is defined else globalIndexDefault %}
    {% if not pageIndexed %}
    <meta name="robots" content="noindex, nofollow" />
    {% endif %}
    {% set finalAssetBase = assetBase %}
    {% if not finalAssetBase %}
      {% set slugPath = '' %}
      {% if site and site.slug %}
        {% set slugPath = site.slug %}
      {% elseif site and site.slugValue %}
        {% set slugPath = site.slugValue %}
      {% endif %}
      {% set slugPart = slugPath %}
      {% if slugPart and (slugPart | first) == '/' %}
        {% set slugPart = slugPart | slice(1) %}
      {% endif %}
      {% if isPreview and slugPart %}
        {% set finalAssetBase = '/sites/' ~ slugPart ~ '/assets' %}
      {% else %}
        {% set finalAssetBase = '/assets' %}
      {% endif %}
    {% endif %}
    <link rel="stylesheet" href="{{ finalAssetBase }}/theme.css" />
    <link rel="stylesheet" href="{{ finalAssetBase }}/site.css" />
    {# US9.B2 - Analytics head code injection #}
    {% if site.analytics and site.analytics.headCode %}
    {{ site.analytics.headCode | safe }}
    {% endif %}
  </head>
  <body class="font-['Inter'] text-slate-900">
    {% set collectionMap = collections or {} %}
    
    {# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• #}
    {# HEADER DYNAMIQUE                                                     #}
    {# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• #}
    {% if header %}
      {% set headerBg = header.style.bg if header.style and header.style.bg else 'bg-white' %}
      {% set headerPosition = header.style.position if header.style and header.style.position else 'static' %}
      {% set positionClass = 'sticky top-0 z-50' if headerPosition == 'sticky' else ('fixed top-0 left-0 right-0 z-50' if headerPosition == 'fixed' else '') %}
      <header class="{{ headerBg }} {{ positionClass }} shadow-sm border-b border-slate-100">
        <div class="max-w-6xl mx-auto px-6 py-4">
          <nav class="flex items-center justify-between gap-6">
            {# Logo #}
            <a href="{{ header.logo.url or '/' }}" class="flex items-center gap-3 font-bold text-xl">
              {% if header.logo.src %}
                <img src="{{ header.logo.src }}" alt="{{ header.logo.alt or site.title or 'Logo' }}" class="h-8 w-auto" />
              {% endif %}
              {% if header.logo.alt and not header.logo.src %}
                <span>{{ header.logo.alt }}</span>
              {% elif not header.logo.src %}
                <span>{{ site.title or 'Site' }}</span>
              {% endif %}
            </a>
            {# Navigation Desktop #}
            {% if header.nav and header.nav | length > 0 %}
              <ul class="hidden md:flex items-center gap-6">
                {% for item in header.nav %}
                  <li>
                    <a href="{{ item.url or '#' }}" class="text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors">
                      {{ item.label or item.url }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
            {# CTA Desktop #}
            {% if header.cta and header.cta.text %}
              {% set ctaStyle = header.cta.style or 'primary' %}
              {% if ctaStyle == 'primary' %}
                {% set ctaClass = 'bg-violet-600 text-white hover:bg-violet-700' %}
              {% elif ctaStyle == 'secondary' %}
                {% set ctaClass = 'border border-violet-600 text-violet-600 hover:bg-violet-50' %}
              {% else %}
                {% set ctaClass = 'text-violet-600 hover:text-violet-700' %}
              {% endif %}
              <a href="{{ header.cta.url or '#' }}" class="hidden md:inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-semibold transition-colors {{ ctaClass }}">
                {{ header.cta.text }}
              </a>
            {% endif %}
            {# Menu Burger Mobile (natif avec details/summary) #}
            {% if (header.nav and header.nav | length > 0) or (header.cta and header.cta.text) %}
              <details class="md:hidden relative">
                <summary class="list-none cursor-pointer p-2 -m-2 rounded-lg hover:bg-slate-100 transition-colors" aria-label="Menu">
                  <svg class="w-6 h-6 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                  </svg>
                </summary>
                <div class="absolute right-0 top-full mt-2 w-56 bg-white rounded-xl shadow-lg border border-slate-200 py-2 z-50">
                  {% if header.nav and header.nav | length > 0 %}
                    {% for item in header.nav %}
                      <a href="{{ item.url or '#' }}" class="block px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 hover:text-slate-900 transition-colors">
                        {{ item.label or item.url }}
                      </a>
                    {% endfor %}
                  {% endif %}
                  {% if header.cta and header.cta.text %}
                    <div class="border-t border-slate-100 mt-2 pt-2 px-4">
                      {% set ctaStyle = header.cta.style or 'primary' %}
                      {% if ctaStyle == 'primary' %}
                        {% set ctaMobileClass = 'bg-violet-600 text-white hover:bg-violet-700' %}
                      {% elif ctaStyle == 'secondary' %}
                        {% set ctaMobileClass = 'border border-violet-600 text-violet-600 hover:bg-violet-50' %}
                      {% else %}
                        {% set ctaMobileClass = 'text-violet-600 hover:text-violet-700' %}
                      {% endif %}
                      <a href="{{ header.cta.url or '#' }}" class="block w-full text-center rounded-lg px-4 py-2 text-sm font-semibold transition-colors {{ ctaMobileClass }}">
                        {{ header.cta.text }}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </details>
            {% endif %}
          </nav>
        </div>
      </header>
      {# Spacer for fixed header #}
      {% if headerPosition == 'fixed' %}
        <div class="h-16"></div>
      {% endif %}
    {% else %}
      {# Header par dÃ©faut si pas de config #}
      <header class="bg-white shadow-sm border-b border-slate-100">
        <div class="max-w-5xl mx-auto px-6 py-8 space-y-2">
          <p class="text-xs uppercase tracking-[0.2em] text-slate-400">Preview responsive</p>
          <h1 class="text-3xl font-bold">{{ site.title or 'Site' }}</h1>
          <p class="text-sm text-slate-500">{{ page.slug or '/' }}</p>
        </div>
      </header>
    {% endif %}

    <main class="max-w-5xl mx-auto px-6 py-10 space-y-6">
      {% macro animationAttrs(settings) %}
        {% if settings and settings.animation %}
          data-anim="{{ settings.animation }}"
          {% if settings.animationDelay is defined and settings.animationDelay is not none and settings.animationDelay != '' %}
            data-anim-delay="{{ settings.animationDelay }}"
          {% endif %}
          {% if settings.animationDuration is defined and settings.animationDuration is not none and settings.animationDuration != '' %}
            data-anim-duration="{{ settings.animationDuration }}"
          {% endif %}
        {% endif %}
      {% endmacro %}

      {# Helper pour normaliser les classes - ajoute le prÃ©fixe si manquant #}
      {% macro normalizeClass(value, prefix, defaultValue) %}
        {%- if not value -%}
          {{- defaultValue -}}
        {%- elif value | string | first == prefix | first or value | string | slice(0, prefix | length) == prefix -%}
          {{- value -}}
        {%- else -%}
          {{- prefix ~ value -}}
        {%- endif -%}
      {% endmacro %}

      {# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• #}
      {# MACRO RENDER BLOCK - Rendu complet d'un bloc (rÃ©utilisable)         #}
      {# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• #}
      {% macro renderBlock(block, isChild, collectionMap) %}
        {% set raw_type = (block.type or '') %}
        {% set type = raw_type | lower %}
        {% set settings = block.settings or {} %}
        {% set animAttrs = animationAttrs(settings) %}
        
        {% if type == 'hero' %}
          {% set content_align = settings.contentAlign or 'items-center' %}
          {% set horizontal_align = settings.horizontalAlign or 'items-center' %}
          {% set text_align = settings.textAlign or 'text-center' %}
          {% set has_image = settings.image %}
          {% set layout = settings.layout or 'fullwidth-bg' %}
          {% set is_fullwidth = layout == 'fullwidth-bg' %}
          {% set is_row = 'row' in layout %}
          {% set is_reverse = 'reverse' in layout %}
          {% set height = settings.height or 'min-h-[50vh]' %}
          {% set overlay = settings.overlay or 'bg-black/0' %}
          {% set title_size = settings.titleSize or 'text-4xl' %}
          {% set hero_bg = settings.bg if settings.bg and 'bg-' in settings.bg else 'bg-gradient-to-br from-violet-50 to-white' %}
          {% set hero_radius = settings.borderRadius if settings.borderRadius and 'rounded' in settings.borderRadius else 'rounded-3xl' %}
          {% set hero_shadow = settings.shadow if settings.shadow and 'shadow' in settings.shadow else 'shadow-none' %}
          
          {% if is_fullwidth %}
            {# Mode fullwidth avec image en background #}
            <section
              data-preview-block="{{ block.id }}"
              {{ animAttrs | safe }}
              class="relative overflow-hidden {{ hero_radius }} {{ hero_shadow }} {{ height }} flex {{ content_align }} justify-center"
              {% if has_image %}style="background-image: url('{{ settings.image }}'); background-size: cover; background-position: center;"{% else %}class="{{ hero_bg }}"{% endif %}
            >
              {# Overlay #}
              {% if overlay != 'bg-black/0' or has_image %}
                <div class="absolute inset-0 {{ overlay if overlay != 'bg-black/0' else 'bg-black/30' }}"></div>
              {% endif %}
              {# Contenu centrÃ© #}
              <div class="relative z-10 w-full max-w-4xl mx-auto px-8 py-16 flex flex-col gap-6 {{ horizontal_align }} {{ text_align }}">
                {% if isPreview %}
                <p class="text-xs uppercase tracking-[0.3em] {% if has_image %}text-white/80{% else %}text-violet-400{% endif %}">
                  {{ block.status or 'Brouillon' }}
                </p>
                {% endif %}
                <h2 class="{{ title_size }} font-bold leading-tight {% if has_image %}text-white drop-shadow-lg{% else %}text-slate-900{% endif %}">
                  {{ settings.title or block.label or 'Titre du hero' }}
                </h2>
                <div class="text-lg max-w-2xl {% if has_image %}text-white/90{% else %}text-slate-600{% endif %} [&>p]:mb-2 [&>ul]:list-disc [&>ul]:ml-4 [&>ol]:list-decimal [&>ol]:ml-4 [&>a]:underline [&>strong]:font-semibold [&>em]:italic">
                  {{ (settings.subtitle or block.description or 'Ajoutez un sous-titre inspirant pour ce hero.') | safe }}
                </div>
                {% if settings.ctaLabel %}
                  <a
                    href="{{ settings.ctaUrl or '#' }}"
                    class="inline-flex w-fit items-center justify-center rounded-full {% if has_image %}bg-white text-slate-900 hover:bg-white/90{% else %}bg-violet-600 text-white hover:bg-violet-500{% endif %} px-6 py-3 text-sm font-semibold shadow-lg"
                  >
                    {{ settings.ctaLabel }}
                  </a>
                {% endif %}
              </div>
            </section>
          {% else %}
            {# Mode classique avec image Ã  cÃ´tÃ© ou au-dessus #}
            {% if is_row %}
              {% set grid_class = 'grid gap-10 lg:grid-cols-2 ' ~ content_align %}
            {% else %}
              {% set grid_class = 'flex flex-col gap-8 ' ~ content_align %}
            {% endif %}
            <section
              data-preview-block="{{ block.id }}"
              {{ animAttrs | safe }}
              class="relative overflow-hidden {{ hero_bg }} {{ hero_radius }} {{ hero_shadow }} {{ height }} px-10 py-16"
            >
              {% if overlay != 'bg-black/0' %}
                <div class="absolute inset-0 {{ overlay }}"></div>
              {% endif %}
              <div class="relative z-10 {{ grid_class }} {% if is_reverse %}lg:flex-row-reverse{% endif %}">
                <div class="flex flex-col gap-4 {% if is_row %}{% else %}items-center text-center{% endif %}" {% if is_reverse %}style="order: 2"{% endif %}>
                  {% if isPreview %}
                  <p class="text-xs uppercase tracking-[0.3em] text-violet-400">
                    {{ block.status or 'Brouillon' }}
                  </p>
                  {% endif %}
                  <h2 class="{{ title_size }} font-bold leading-tight">
                    {{ settings.title or block.label or 'Titre du hero' }}
                  </h2>
                  <div class="text-lg text-slate-600 max-w-2xl [&>p]:mb-2 [&>ul]:list-disc [&>ul]:ml-4 [&>ol]:list-decimal [&>ol]:ml-4 [&>a]:text-violet-600 [&>a]:underline [&>strong]:font-semibold [&>em]:italic">
                    {{ (settings.subtitle or block.description or 'Ajoutez un sous-titre inspirant pour ce hero.') | safe }}
                  </div>
                  {% if settings.ctaLabel %}
                    <a
                      href="{{ settings.ctaUrl or '#' }}"
                      class="inline-flex w-fit items-center justify-center rounded-full bg-violet-600 px-5 py-2 text-white text-sm font-semibold hover:bg-violet-500"
                    >
                      {{ settings.ctaLabel }}
                    </a>
                  {% endif %}
                </div>
                {% if has_image %}
                  <div class="flex justify-center {% if is_row %}lg:justify-end{% endif %}" {% if is_reverse %}style="order: 1"{% endif %}>
                    <div class="relative w-full max-w-sm overflow-hidden rounded-[2rem] border border-white/60 shadow-2xl ring-1 ring-violet-100/80">
                      <div
                        class="h-64 w-full bg-slate-200 bg-cover bg-center"
                        style="{{ 'background-image:url(' ~ settings.image ~ ');' }}"
                        aria-label="Illustration du hero"
                      ></div>
                      <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
                    </div>
                  </div>
                {% endif %}
              </div>
            </section>
          {% endif %}
        
        {% elif type == 'paragraphe' or type == 'texte' %}
          {% set text_class = settings.align if settings.align and 'text-' in settings.align else 'text-left' %}
          {% set para_bg = settings.bg if settings.bg and 'bg-' in settings.bg else 'bg-white' %}
          {% set para_radius = settings.borderRadius if settings.borderRadius and 'rounded' in settings.borderRadius else 'rounded-2xl' %}
          {% set para_shadow = settings.shadow if settings.shadow and 'shadow' in settings.shadow else 'shadow-sm' %}
          {% set title_size = settings.titleSize or 'text-2xl' %}
          {% set text_size = settings.textSize or 'text-base' %}
          {% set spacing = settings.spacing or 'space-y-4' %}
          <section
            data-preview-block="{{ block.id }}"
            {{ animAttrs | safe }}
            class="{{ para_bg }} {{ para_radius }} {{ para_shadow }} p-8 border border-slate-100 {{ text_class }} {{ spacing }}"
          >
            <h3 class="{{ title_size }} font-semibold mb-2">
              {{ settings.title or block.label or 'Titre du paragraphe' }}
            </h3>
            <div class="{{ text_size }} text-slate-600 [&>p]:mb-3 [&>ul]:list-disc [&>ul]:ml-5 [&>ul]:mb-3 [&>ol]:list-decimal [&>ol]:ml-5 [&>ol]:mb-3 [&>li]:mb-1 [&>a]:text-violet-600 [&>a]:underline [&>strong]:font-semibold [&>em]:italic [&>h1]:text-2xl [&>h1]:font-bold [&>h1]:mb-3 [&>h2]:text-xl [&>h2]:font-semibold [&>h2]:mb-2 [&>h3]:text-lg [&>h3]:font-medium [&>h3]:mb-2 [&>blockquote]:border-l-4 [&>blockquote]:border-violet-300 [&>blockquote]:pl-4 [&>blockquote]:italic [&>blockquote]:text-slate-500">
              {{ (settings.content or block.description or 'Ajoutez votre texte Ã©ditorial ici.') | safe }}
            </div>
          </section>
        
        {% elif type == 'image' %}
          {% set src = settings.src or '' %}
          {% set img_bg = settings.bg if settings.bg and 'bg-' in settings.bg else 'bg-white' %}
          {% set img_radius = settings.borderRadius if settings.borderRadius and 'rounded' in settings.borderRadius else 'rounded-2xl' %}
          {% set img_shadow = settings.shadow if settings.shadow and 'shadow' in settings.shadow else 'shadow-sm' %}
          {% set img_height = settings.height if settings.height else 'h-64' %}
          {% set img_object_fit = settings.objectFit if settings.objectFit else 'object-cover' %}
          {% set img_max_width = settings.maxWidth if settings.maxWidth else 'max-w-full' %}
          {% set img_align = settings.align if settings.align else 'mx-auto' %}
          {% set img_rounded = settings.rounded if settings.rounded else 'rounded-2xl' %}
          <figure
            data-preview-block="{{ block.id }}"
            {{ animAttrs | safe }}
            class="{{ img_bg }} {{ img_radius }} {{ img_shadow }} {{ img_max_width }} {{ img_align }} border border-slate-100 p-4 space-y-3"
          >
            {% if src %}
              <img
                src="{{ src }}"
                alt="{{ settings.alt or block.label or 'Image' }}"
                class="w-full {{ img_height }} {{ img_object_fit }} {{ img_rounded }}"
              />
            {% else %}
              <div class="w-full {{ img_height }} {{ img_rounded }} bg-slate-200 flex items-center justify-center text-slate-400">
                <span class="text-4xl">ğŸ–¼ï¸</span>
              </div>
            {% endif %}
            <div>
              <h3 class="text-xl font-semibold">{{ block.label or 'Bloc image' }}</h3>
              <p class="text-sm text-slate-500">{{ block.description or 'Illustration' }}</p>
            </div>
            {% if settings.showCaption and settings.caption %}
              <figcaption class="text-xs text-slate-500">{{ settings.caption }}</figcaption>
            {% endif %}
          </figure>
        
        {% elif type == 'groupe' or type == 'sections' or type == 'grid' %}
          {% set mobile_class = settings.columnsMobile if settings.columnsMobile and 'grid-cols' in settings.columnsMobile else 'grid-cols-1' %}
          {% set desktop_class = settings.columnsDesktop if settings.columnsDesktop and 'grid-cols' in settings.columnsDesktop else 'md:grid-cols-3' %}
          {% set gap_class = settings.gap if settings.gap and 'gap-' in settings.gap else 'gap-4' %}
          {% set items_align = settings.itemsAlign if settings.itemsAlign and 'items-' in settings.itemsAlign else 'items-start' %}
          {% set group_bg = settings.bg if settings.bg and 'bg-' in settings.bg else 'bg-white' %}
          {% set group_radius = settings.borderRadius if settings.borderRadius and 'rounded' in settings.borderRadius else 'rounded-2xl' %}
          {% set group_shadow = settings.shadow if settings.shadow and 'shadow' in settings.shadow else 'shadow-sm' %}
          {% set children = block.children or [] %}
          <section
            data-preview-block="{{ block.id }}"
            {{ animAttrs | safe }}
            class="{{ group_bg }} {{ group_radius }} {{ group_shadow }} border border-slate-100 p-6 space-y-3"
          >
            {% if children | length == 0 %}
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-lg font-semibold">{{ block.label or 'Bloc groupe' }}</h3>
                  <p class="text-sm text-slate-500">
                    {{ block.description or 'Glissez des blocs ici pour crÃ©er une disposition' }}
                  </p>
                </div>
                <span class="text-xs text-slate-400">
                  {{ mobile_class }} Â· {{ desktop_class }}
                </span>
              </div>
              <div class="grid {{ gap_class }} {{ mobile_class }} {{ desktop_class }} {{ items_align }}">
                <div class="h-24 rounded-2xl bg-slate-50 border-2 border-dashed border-slate-200 flex items-center justify-center text-slate-400 text-sm">+</div>
                <div class="h-24 rounded-2xl bg-slate-50 border-2 border-dashed border-slate-200 flex items-center justify-center text-slate-400 text-sm">+</div>
                <div class="h-24 rounded-2xl bg-slate-50 border-2 border-dashed border-slate-200 flex items-center justify-center text-slate-400 text-sm">+</div>
              </div>
            {% else %}
              <div class="grid {{ gap_class }} {{ mobile_class }} {{ desktop_class }} {{ items_align }}">
                {% for child in children %}
                  {% set c_type = (child.type or '') | lower %}
                  {% set c_settings = child.settings or {} %}
                  <div class="group-child-wrapper" data-preview-block="{{ child.id }}" {{ animationAttrs(c_settings) | safe }}>
                    {# â”€â”€â”€ Rendu complet des enfants (inline, pas de rÃ©cursion) â”€â”€â”€ #}
                    {% if c_type == 'hero' %}
                      {% set c_content_align = c_settings.contentAlign or 'items-center' %}
                      {% set c_has_image = c_settings.image %}
                      {% set c_layout = c_settings.layout or 'flex-col' %}
                      {% set c_is_row = 'row' in c_layout %}
                      {% set c_height = c_settings.height or 'min-h-[30vh]' %}
                      {% set c_title_size = c_settings.titleSize or 'text-2xl' %}
                      {% set c_hero_bg = c_settings.bg if c_settings.bg and 'bg-' in c_settings.bg else 'bg-gradient-to-br from-violet-50 to-white' %}
                      {% set c_hero_radius = c_settings.borderRadius if c_settings.borderRadius and 'rounded' in c_settings.borderRadius else 'rounded-2xl' %}
                      <div class="relative overflow-hidden {{ c_hero_bg }} {{ c_hero_radius }} {{ c_height }} px-6 py-8">
                        <div class="flex flex-col gap-3 {{ c_content_align }}">
                          <h3 class="{{ c_title_size }} font-bold leading-tight">
                            {{ c_settings.title or child.label or 'Titre' }}
                          </h3>
                          <div class="text-sm text-slate-600">
                            {{ (c_settings.subtitle or child.description or '') | safe }}
                          </div>
                          {% if c_settings.ctaLabel %}
                            <a href="{{ c_settings.ctaUrl or '#' }}" class="inline-flex rounded-full bg-violet-600 px-4 py-2 text-white text-sm font-semibold hover:bg-violet-500">
                              {{ c_settings.ctaLabel }}
                            </a>
                          {% endif %}
                        </div>
                        {% if c_has_image %}
                          <div class="mt-4">
                            <img src="{{ c_settings.image }}" alt="" class="w-full h-32 object-cover rounded-xl" />
                          </div>
                        {% endif %}
                      </div>
                    
                    {% elif c_type == 'paragraphe' or c_type == 'texte' %}
                      {% set c_text_class = c_settings.align if c_settings.align and 'text-' in c_settings.align else 'text-left' %}
                      {% set c_para_bg = c_settings.bg if c_settings.bg and 'bg-' in c_settings.bg else 'bg-white' %}
                      {% set c_para_radius = c_settings.borderRadius if c_settings.borderRadius and 'rounded' in c_settings.borderRadius else 'rounded-xl' %}
                      {% set c_title_size = c_settings.titleSize or 'text-lg' %}
                      {% set c_text_size = c_settings.textSize or 'text-sm' %}
