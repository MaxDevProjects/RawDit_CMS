    {# Script pour mise Ã  jour live des styles depuis l'admin #}
    <script>
      window.addEventListener('message', function(event) {
        if (!event.data || event.data.type !== 'updateBlockStyles') return;
        
        const { blockId, settings } = event.data;
        const block = document.querySelector('[data-preview-block="' + blockId + '"]');
        if (!block) return;
        
        // Mapping des settings vers les classes Tailwind
        const classUpdates = [];
        
        // Background
        if (settings.bg) {
          block.className = block.className.replace(/\bbg-\S+/g, '');
          classUpdates.push(settings.bg);
        }
        
        // Border radius
        if (settings.borderRadius) {
          block.className = block.className.replace(/\brounded-\S+/g, '');
          classUpdates.push(settings.borderRadius.startsWith('rounded') ? settings.borderRadius : 'rounded-' + settings.borderRadius);
        }
        
        // Shadow
        if (settings.shadow) {
          block.className = block.className.replace(/\bshadow-\S+/g, '');
          classUpdates.push(settings.shadow.startsWith('shadow') ? settings.shadow : 'shadow-' + settings.shadow);
        }
        
        // Height (pour hero)
        if (settings.height) {
          block.className = block.className.replace(/\bmin-h-\S+/g, '');
          classUpdates.push(settings.height);
        }
        
        // Ajouter les nouvelles classes
        classUpdates.forEach(function(cls) {
          if (cls) block.classList.add(cls);
        });
        
        // Mise Ã  jour des textes si prÃ©sents
        const titleEl = block.querySelector('h2, h3');
        if (titleEl && settings.titleSize) {
          titleEl.className = titleEl.className.replace(/\btext-\d*xl\b/g, '');
          titleEl.classList.add(settings.titleSize);
        }
        
        // Overlay (pour hero)
        if (settings.overlay !== undefined) {
          let overlay = block.querySelector('.absolute.inset-0[class*="bg-black"]');
          if (settings.overlay && settings.overlay !== 'bg-black/0') {
            if (!overlay) {
              overlay = document.createElement('div');
              overlay.className = 'absolute inset-0 ' + settings.overlay;
              block.insertBefore(overlay, block.firstChild);
            } else {
              overlay.className = 'absolute inset-0 ' + settings.overlay;
            }
          } else if (overlay) {
            overlay.remove();
          }
        }

        // Animations (data attributes + relance du helper)
        if (settings.animation !== undefined) {
          if (settings.animation) {
            block.dataset.anim = settings.animation;
          } else {
            delete block.dataset.anim;
          }
        }
        if (settings.animationDelay !== undefined) {
          if (settings.animationDelay === '' || settings.animationDelay === null) {
            delete block.dataset.animDelay;
          } else {
            block.dataset.animDelay = settings.animationDelay;
          }
        }
        if (settings.animationDuration !== undefined) {
          if (settings.animationDuration === '' || settings.animationDuration === null) {
            delete block.dataset.animDuration;
          } else {
            block.dataset.animDuration = settings.animationDuration;
          }
        }
        if (block.dataset.anim) {
          block.classList.remove('is-visible');
        }
        if (window.ClowerAnimations && typeof window.ClowerAnimations.refresh === 'function') {
          window.ClowerAnimations.refresh();
        }
        
        // Flash visuel pour confirmer la mise Ã  jour
        block.style.transition = 'outline 0.2s';
        block.style.outline = '2px solid #9C6BFF';
        setTimeout(function() {
          block.style.outline = 'none';
        }, 300);
      });
    </script>
