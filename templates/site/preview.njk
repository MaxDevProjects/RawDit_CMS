<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {% set seoTitle = page.seo.title if page.seo and page.seo.title else page.title %}
    {% set seoDescription = page.seo.description if page.seo and page.seo.description else '' %}
    <title>{{ seoTitle or 'Page' }} ‚Äì {{ site.title or 'Site' }}</title>
    {% if seoDescription %}
    <meta name="description" content="{{ seoDescription }}" />
    {% endif %}
    {# US9.B1 - noindex meta for non-indexed pages #}
    {% set globalIndexDefault = site.seo.indexAllPagesByDefault if site.seo and site.seo.indexAllPagesByDefault is defined else true %}
    {% set pageIndexed = page.seo.indexed if page.seo and page.seo.indexed is defined else globalIndexDefault %}
    {% if not pageIndexed %}
    <meta name="robots" content="noindex, nofollow" />
    {% endif %}
    {% set finalAssetBase = assetBase %}
    {% set slugValue = '' %}
    {% if site and site.slug %}
      {% set slugValue = site.slug %}
    {% elseif site and site.slugValue %}
      {% set slugValue = site.slugValue %}
    {% endif %}
    {% set slugPart = (slugValue or '') | replace('^/+|/+$', '', 'g') | replace('/', '', 'g') %}
    {% if not finalAssetBase %}
      {% if isPreview and slugPart %}
        {% set finalAssetBase = '/sites/' ~ slugPart ~ '/assets' %}
      {% else %}
        {% set finalAssetBase = '/assets' %}
      {% endif %}
    {% endif %}
    {% set siteBasePath = '' %}
    {% if isPreview and slugPart %}
      {% set siteBasePath = '/sites/' ~ slugPart %}
    {% endif %}
    <link rel="stylesheet" href="{{ finalAssetBase }}/theme.css" />
    <link rel="stylesheet" href="{{ finalAssetBase }}/site.css" />
    <style>
      .theme-border-accent {
        border-color: var(--color-accent);
      }
      .theme-link-secondary {
        color: var(--color-secondary);
        transition: color 0.2s ease, opacity 0.2s ease;
      }
      .theme-link-secondary:hover {
        opacity: 0.85;
      }
      .theme-cta-primary {
        background: var(--color-primary);
        color: var(--cta-text-color, var(--color-text));
        border-color: transparent;
      }
      .theme-cta-primary:hover {
        opacity: 0.92;
      }
      .theme-cta-secondary {
        background: transparent;
        color: var(--cta-text-color, var(--color-secondary));
        border-color: var(--color-accent);
      }
      .theme-cta-secondary:hover {
        opacity: 0.9;
      }
      .theme-bg-primary {
        background: var(--color-primary);
      }
      .theme-bg-secondary {
        background: var(--color-secondary);
      }
      .theme-bg-accent {
        background: var(--color-accent);
      }
      .theme-bg-background {
        background: var(--color-background);
      }
      .theme-bg-text {
        background: var(--color-text);
      }
      body {
        background-color: var(--color-background);
        color: var(--color-text);
      }
      .skip-link:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 3px;
      }
      .theme-link-secondary:focus-visible,
      .theme-cta-primary:focus-visible,
      .theme-cta-secondary:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 3px;
      }
    </style>
    {% if inlineThemeCss %}
    <style data-theme-inline>
      {{ inlineThemeCss | safe }}
    </style>
    {% endif %}
    {# US9.B2 - Analytics head code injection #}
    {% if site.analytics and site.analytics.headCode %}
    {{ site.analytics.headCode | safe }}
    {% endif %}
    {% set animationsAllowed = site.accessibility.animationsEnabled if site.accessibility and site.accessibility.animationsEnabled is defined else true %}
    {% set allPagesList = allPages if allPages else (site.pages if site.pages else []) %}
    {% set fallbackCount = 0 %}
    {% for entry in allPagesList %}
      {% set includeInNav = true %}
      {% if entry.accessibility and entry.accessibility.showInMainNav is defined %}
        {% set includeInNav = entry.accessibility.showInMainNav %}
      {% endif %}
      {% if includeInNav %}
        {% set fallbackCount = fallbackCount + 1 %}
      {% endif %}
    {% endfor %}
    {% set themeBgMap = {
      'theme-primary': 'theme-bg-primary',
      'theme-secondary': 'theme-bg-secondary',
      'theme-accent': 'theme-bg-accent',
      'theme-background': 'theme-bg-background',
      'theme-text': 'theme-bg-text'
    } %}
    {% set currentSlug = page.slug or '/' %}
    {% if not currentSlug %}
      {% set currentSlug = '/' %}
    {% endif %}
    {% if currentSlug and currentSlug[0] != '/' and '://' not in currentSlug and currentSlug[0] != '#' %}
      {% set currentSlug = '/' ~ currentSlug %}
    {% endif %}
  </head>
  <body class="font-['Inter']" data-animations="{{ 'on' if animationsAllowed else 'off' }}">
    <a href="#main-content" class="skip-link focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2">Aller au contenu principal</a>
    {% set collectionMap = collections or {} %}
    {% macro linkHref(urlValue) -%}
      {%- set raw = ((urlValue | default('')) ~ '') | trim -%}
      {%- if not raw -%}
        #
      {%- else -%}
        {%- set lower = raw | lower -%}
        {%- set firstChar = raw | slice(0, 1) -%}
        {%- set twoChars = raw | slice(0, 2) -%}
        {%- if firstChar == '#' -%}
          {{- raw -}}
        {%- elif twoChars == '//' -%}
          {% set dotParts = raw | split('.') %}
          {% if dotParts | length > 1 %}
            {{- raw -}}
          {% else %}
            {% set internalPart = raw | slice(2) %}
            {% set cleanedPath = internalPart | trim %}
            {# `trim('/')` ne retire pas les "/" dans Nunjucks : on retire manuellement le pr√©fixe/suffixe #}
            {% if cleanedPath and cleanedPath[0] == '/' %}
              {% set cleanedPath = cleanedPath | replace('/', '', 1) %}
            {% endif %}
            {% if cleanedPath %}
              {% set normalizedPath = '/' ~ cleanedPath %}
            {% else %}
              {% set normalizedPath = '/' %}
            {% endif %}
            {% if siteBasePath %}
              {{- siteBasePath ~ normalizedPath -}}
            {% else %}
              {{- normalizedPath -}}
            {% endif %}
          {% endif %}
        {%- elif lower | slice(0, 7) == 'http://' or lower | slice(0, 8) == 'https://' -%}
          {{- raw -}}
        {%- elif lower | slice(0, 7) == 'mailto:' or lower | slice(0, 4) == 'tel:' -%}
          {{- raw -}}
        {%- elif firstChar == '/' -%}
          {# Retire uniquement le "/" de t√™te, conserve les "/" internes #}
          {% set cleanedPath = raw | replace('/', '', 1) | trim %}
          {% if cleanedPath %}
            {% set normalizedPath = '/' ~ cleanedPath %}
          {% else %}
            {% set normalizedPath = '/' %}
          {% endif %}
          {% if siteBasePath %}
            {{- siteBasePath ~ normalizedPath -}}
          {% else %}
            {{- normalizedPath -}}
          {% endif %}
        {%- else -%}
          {% set cleanedPath = raw | trim %}
          {% if cleanedPath and cleanedPath[0] == '/' %}
            {% set cleanedPath = cleanedPath | replace('/', '', 1) %}
          {% endif %}
          {% if cleanedPath %}
            {% set normalizedPath = '/' ~ cleanedPath %}
          {% else %}
            {% set normalizedPath = '/' %}
          {% endif %}
          {% if siteBasePath %}
            {{- siteBasePath ~ normalizedPath -}}
          {% else %}
            {{- normalizedPath -}}
          {% endif %}
        {%- endif -%}
      {%- endif -%}
    {%- endmacro %}
    {% macro each_fallback_nav(pages, currentSlug) %}
      {% for entry in pages %}
        {% set includeInNav = true %}
        {% if entry.accessibility and entry.accessibility.showInMainNav is defined %}
          {% set includeInNav = entry.accessibility.showInMainNav %}
        {% endif %}
        {% if includeInNav %}
          {% set navUrl = linkHref(entry.slug or '/') %}
          {% set isCurrent = navUrl == currentSlug %}
          {{ caller(entry, navUrl, isCurrent) }}
        {% endif %}
      {% endfor %}
    {% endmacro %}
    
    {# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê #}
    {# HEADER DYNAMIQUE                                                     #}
    {# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê #}
    {% if header %}
      {% set headerBg = header.style.bg if header.style and header.style.bg else 'bg-white' %}
      {% set headerPosition = header.style.position if header.style and header.style.position else 'static' %}
      {% set positionClass = 'sticky top-0 z-50' if headerPosition == 'sticky' else ('fixed top-0 left-0 right-0 z-50' if headerPosition == 'fixed' else '') %}
      {% set hasCustomNav = header.nav and header.nav | length > 0 %}
      {% set hasFallbackNav = fallbackCount > 0 %}
      <header class="{{ headerBg }} {{ positionClass }} shadow-sm border-b theme-border-accent">
        <div class=" mx-auto px-6 py-4">
          <nav class="flex items-center justify-between gap-6" aria-label="Navigation principale">
            {% set logoHref = linkHref(header.logo.url or '/') %}
            <a href="{{ logoHref }}" class="flex items-center gap-3 font-bold text-xl">
              {% if header.logo.src %}
                <img src="{{ header.logo.src }}" alt="{{ header.logo.alt or site.title or 'Logo' }}" class="h-8 w-auto" />
              {% endif %}
              {% if header.logo.alt and not header.logo.src %}
                <span>{{ header.logo.alt }}</span>
              {% elif not header.logo.src %}
                <span>{{ site.title or 'Site' }}</span>
              {% endif %}
            </a>
            {% if hasCustomNav %}
              <ul class="hidden md:flex items-center gap-6">
                {% for item in header.nav %}
                  {% set navUrl = linkHref(item.url or '#') %}
                  {% set isCurrent = navUrl == currentSlug %}
                  <li>
                    <a href="{{ navUrl }}" class="text-sm font-medium transition-colors theme-link-secondary {% if isCurrent %}text-slate-900 font-semibold{% endif %}" {% if isCurrent %}aria-current="page"{% endif %}>
                      {{ item.label or item.url }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% elseif hasFallbackNav %}
              <ul class="hidden md:flex items-center gap-6">
                {% call(item, navUrl, isCurrent) each_fallback_nav(allPagesList, currentSlug) %}
                  <li>
                    <a href="{{ navUrl }}" class="text-sm font-medium transition-colors theme-link-secondary {% if isCurrent %}text-slate-900 font-semibold{% endif %}" {% if isCurrent %}aria-current="page"{% endif %}>
                      {{ item.name or item.title or navUrl }}
                    </a>
                  </li>
                {% endcall %}
              </ul>
            {% endif %}
	    {% if header.cta and header.cta.text %}
	              {% set ctaStyle = header.cta.style or 'primary' %}
	              {% set ctaTextColorToken = (header.cta.textColor or '') | lower %}
	              {% set ctaTextColorCss = '' %}
	              {% if ctaTextColorToken == 'theme-text' %}
	                {% set ctaTextColorCss = 'var(--color-text)' %}
	              {% elif ctaTextColorToken == 'theme-background' %}
	                {% set ctaTextColorCss = 'var(--color-background)' %}
	              {% elif ctaTextColorToken == 'white' %}
	                {% set ctaTextColorCss = '#ffffff' %}
	              {% elif ctaTextColorToken == 'black' %}
	                {% set ctaTextColorCss = '#000000' %}
	              {% endif %}
	              {% if ctaStyle == 'primary' %}
	                {% set ctaClass = 'theme-cta-primary shadow-lg' %}
	              {% elif ctaStyle == 'secondary' %}
	                {% set ctaClass = 'theme-cta-secondary border-2' %}
	              {% else %}
	                {% set ctaClass = 'theme-link-secondary' %}
	              {% endif %}
	              {% set ctaHref = linkHref(header.cta.url or '#') %}
	              <a href="{{ ctaHref }}" class="hidden md:inline-flex items-center gap-2 rounded-lg px-4 py-2 text-sm font-semibold transition-colors {{ ctaClass }}" {% if ctaTextColorCss %}style="--cta-text-color: {{ ctaTextColorCss }}"{% endif %}>
	                {{ header.cta.text }}
	              </a>
	            {% endif %}
            {% if hasCustomNav or hasFallbackNav or (header.cta and header.cta.text) %}
              <details class="md:hidden relative">
                <summary class="list-none cursor-pointer p-2 -m-2 rounded-lg hover:bg-slate-100 transition-colors" aria-label="Menu">
                  <svg class="w-6 h-6 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                  </svg>
                </summary>
                <div class="absolute right-0 top-full mt-2 w-56 bg-white rounded-xl shadow-lg border theme-border-accent py-2 z-50">
                  {% if hasCustomNav %}
                    {% for item in header.nav %}
                      {% set navUrl = linkHref(item.url or '#') %}
                      {% set isCurrent = navUrl == currentSlug %}
                      <a href="{{ navUrl }}" class="block px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 hover:text-slate-900 transition-colors {% if isCurrent %}text-slate-900 font-semibold{% endif %}" {% if isCurrent %}aria-current="page"{% endif %}>
                        {{ item.label or item.url }}
                      </a>
                    {% endfor %}
                  {% elseif hasFallbackNav %}
                    {% call(item, navUrl, isCurrent) each_fallback_nav(allPagesList, currentSlug) %}
                      <a href="{{ navUrl }}" class="block px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 hover:text-slate-900 transition-colors {% if isCurrent %}text-slate-900 font-semibold{% endif %}" {% if isCurrent %}aria-current="page"{% endif %}>
                        {{ item.name or item.title or navUrl }}
                      </a>
                    {% endcall %}
                  {% endif %}
                {% if header.cta and header.cta.text %}
                  <div class="border-t border-slate-100 mt-2 pt-2 px-4">
                    {% set ctaStyle = header.cta.style or 'primary' %}
                      {% if ctaStyle == 'primary' %}
                        {% set ctaMobileClass = 'theme-cta-primary shadow-lg' %}
                      {% elif ctaStyle == 'secondary' %}
                        {% set ctaMobileClass = 'theme-cta-secondary border-2' %}
                      {% else %}
                        {% set ctaMobileClass = 'theme-link-secondary' %}
                      {% endif %}
	                      <a href="{{ ctaHref }}" class="block w-full text-center rounded-lg px-4 py-2 text-sm font-semibold transition-colors {{ ctaMobileClass }}" {% if ctaTextColorCss %}style="--cta-text-color: {{ ctaTextColorCss }}"{% endif %}>
	                        {{ header.cta.text }}
	                      </a>
	                    </div>
	                  {% endif %}
                </div>
              </details>
            {% endif %}
          </nav>
        </div>
      </header>
      {% if headerPosition == 'fixed' %}
        <div class="h-16"></div>
      {% endif %}
    {% else %}
      {# Header par d√©faut si pas de config #}
      <header class="bg-white shadow-sm border-b theme-border-accent">
        <div class="max-w-5xl mx-auto px-6 py-8 space-y-2">
          <p class="text-xs uppercase tracking-[0.2em] text-slate-400">Preview responsive</p>
          <h1 class="text-3xl font-bold">{{ site.title or 'Site' }}</h1>
          <p class="text-sm text-slate-500">{{ page.slug or '/' }}</p>
        </div>
          {% if fallbackCount > 0 %}
            <nav class="mt-4" aria-label="Navigation principale">
              <ul class="flex flex-wrap gap-4 text-sm font-semibold">
                {% call(item, navUrl, isCurrent) each_fallback_nav(allPagesList, currentSlug) %}
                  <li>
                    <a href="{{ navUrl }}" class="transition-colors theme-link-secondary {% if isCurrent %}text-slate-900{% endif %}" {% if isCurrent %}aria-current="page"{% endif %}>
                      {{ item.name or item.title or navUrl }}
                    </a>
                  </li>
                {% endcall %}
              </ul>
            </nav>
          {% endif %}
      </header>
    {% endif %}

    {% set mainLabel = page.accessibility.mainLabel if page.accessibility and page.accessibility.mainLabel %}
    <main id="main-content" role="main" {% if mainLabel %}aria-label="{{ mainLabel }}"{% endif %} class="max-w-5xl mx-auto px-6 py-10 space-y-6">
      {% macro animationAttrs(settings) %}
        {% if settings and settings.animation %}
          data-anim="{{ settings.animation }}"
          {% if settings.animationDelay is defined and settings.animationDelay is not none and settings.animationDelay != '' %}
            data-anim-delay="{{ settings.animationDelay }}"
          {% endif %}
          {% if settings.animationDuration is defined and settings.animationDuration is not none and settings.animationDuration != '' %}
            data-anim-duration="{{ settings.animationDuration }}"
          {% endif %}
        {% endif %}
      {% endmacro %}

      {# Helper pour normaliser les classes - ajoute le pr√©fixe si manquant #}
      {% macro normalizeClass(value, prefix, defaultValue) %}
        {%- if not value -%}
          {{- defaultValue -}}
        {%- elif value | string | first == prefix | first or value | string | slice(0, prefix | length) == prefix -%}
          {{- value -}}
        {%- else -%}
          {{- prefix ~ value -}}
        {%- endif -%}
      {% endmacro %}
      {% macro borderClass(settings, fallback = 'border border-slate-100 theme-border-accent') -%}
        {%- if settings and settings.border -%}
          {{- settings.border -}}
        {%- else -%}
          {{- fallback -}}
        {%- endif -%}
      {% endmacro %}
      {% macro tokenToCssColor(token) -%}
        {%- set t = (token or '') | lower -%}
        {%- if not t -%}{%- else -%}
          {%- if t == 'theme-primary' -%}{{- 'var(--color-primary)' -}}
          {%- elif t == 'theme-secondary' -%}{{- 'var(--color-secondary)' -}}
          {%- elif t == 'theme-accent' -%}{{- 'var(--color-accent)' -}}
          {%- elif t == 'theme-background' -%}{{- 'var(--color-background)' -}}
          {%- elif t == 'theme-text' -%}{{- 'var(--color-text)' -}}
          {%- elif t == 'white' -%}{{- '#ffffff' -}}
          {%- elif t == 'black' -%}{{- '#000000' -}}
          {%- else -%}{{- '' -}}
          {%- endif -%}
        {%- endif -%}
      {%- endmacro %}

      {# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê #}
      {# MACRO RENDER BLOCK - Rendu complet d'un bloc (r√©utilisable)         #}
      {# ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê #}
      {% macro renderBlock(block, isChild, collectionMap) %}
        {% set raw_type = (block.type or '') %}
        {% set type = raw_type | lower %}
        {% set settings = block.settings or {} %}
        {% set animAttrs = animationAttrs(settings) %}
        
        {% if type == 'hero' %}
          {% set content_align = settings.contentAlign or 'items-center' %}
          {% set horizontal_align = settings.horizontalAlign or 'items-center' %}
          {% set text_align = settings.textAlign or 'text-center' %}
          {% set has_image = settings.image %}
          {% set layout = settings.layout or 'fullwidth-bg' %}
          {% set is_fullwidth = layout == 'fullwidth-bg' %}
          {% set is_row = 'row' in layout %}
          {% set is_reverse = 'reverse' in layout %}
          {% set height = settings.height or 'min-h-[50vh]' %}
          {% set overlay = settings.overlay or 'bg-black/0' %}
          {% set title_size = settings.titleSize or 'text-4xl' %}
          {% set hero_image_width = settings.imageWidth or 'max-w-sm' %}
          {% set hero_image_height = settings.imageHeight or 'h-64' %}
          {% set hero_image_object_fit = settings.imageObjectFit or 'object-cover' %}
          {% set hero_cta_text_color = tokenToCssColor(settings.ctaTextColor or '') %}
          {% set hero_bg = (settings.bg and themeBgMap[settings.bg]) or settings.bg or 'bg-gradient-to-br from-violet-50 to-white' %}
          {% set hero_radius = settings.borderRadius if settings.borderRadius and 'rounded' in settings.borderRadius else 'rounded-3xl' %}
          {% set hero_shadow = settings.shadow if settings.shadow and 'shadow' in settings.shadow else 'shadow-none' %}
          {% set hero_border = borderClass(settings, 'border-none') %}
          {% set hero_cta_classes = 'inline-flex w-fit items-center justify-center rounded-full px-6 py-3 text-sm font-semibold transition-colors theme-cta-primary shadow-lg' %}
          
          {% if is_fullwidth %}
            {# Mode fullwidth avec image en background #}
            <section
              data-preview-block="{{ block.id }}"
              {{ animAttrs | safe }}
              class="relative overflow-hidden {{ hero_border }} {{ hero_radius }} {{ hero_shadow }} {{ height }} flex {{ content_align }} justify-center {% if not has_image %}{{ hero_bg }}{% endif %}"
            >
              {% if has_image %}
                <img
                  src="{{ settings.image }}"
                  alt=""
                  aria-hidden="true"
                  class="absolute inset-0 h-full w-full object-center {{ hero_image_object_fit }}"
                />
              {% endif %}
              {# Overlay #}
              {% if overlay != 'bg-black/0' or has_image %}
                <div class="absolute inset-0 {{ overlay if overlay != 'bg-black/0' else 'bg-black/30' }}"></div>
              {% endif %}
              {# Contenu centr√© #}
              <div class="relative z-10 w-full max-w-4xl mx-auto px-8 py-16 flex flex-col gap-6 {{ horizontal_align }} {{ text_align }}">
                {% if isPreview %}
                <p class="text-xs uppercase tracking-[0.3em] {% if has_image %}text-white/80{% else %}text-[var(--color-secondary)]{% endif %}">
                  {{ block.status or 'Brouillon' }}
                </p>
                {% endif %}
                <h2 class="{{ title_size }} font-bold leading-tight {% if has_image %}text-white drop-shadow-lg{% else %}text-slate-900{% endif %}">
