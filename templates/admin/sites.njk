{% extends "layout_admin.njk" %}
{% set pageTitle = "Sites" %}
{% set activeTab = "Sites" %}
{% set siteList = data.sites | default([]) %}
{% set hasSites = siteList | length > 0 %}
<span class="hidden border-[#9C6BFF] ring-2 ring-[#9C6BFF] shadow-md"></span>

{% block sidebar_start %}
