{% extends "layout_admin.njk" %}
{% set pageTitle = "Sites" %}
{% set activeTab = "Sites" %}
{% set siteList = data.sites | default([]) %}
{% set hasSites = siteList | length > 0 %}

{% block sidebar_start %}
  <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
    <h2 class="text-sm font-semibold mb-2">Aide / contexte</h2>
    <p class="text-sm text-slate-600">
      Ici tu g√®res tes sites RAWDIT (un par projet client par exemple).
    </p>
  </section>
{% endblock %}

{% block content_main %}
  <span class="hidden border-[#9C6BFF] ring-2 ring-[#9C6BFF] shadow-md"></span>
  <div class="space-y-4">
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
      <div>
        <h1 class="text-lg font-semibold">Vos sites</h1>
        <p class="text-sm text-slate-600">
          G√©rez vos projets et choisissez celui sur lequel travailler.
        </p>
      </div>
      <button
        type="button"
        data-site-create
        class="inline-flex items-center rounded-xl bg-[#9C6BFF] px-4 py-2 text-sm font-medium text-white
               hover:bg-[#8654f5] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#9C6BFF]"
      >
        + Cr√©er un site
      </button>
    </div>

    {% if hasSites %}
      <section class="grid gap-4 md:grid-cols-1">
        {% for site in siteList %}
          <article
            class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4 flex flex-col gap-3 transition-all"
            data-site-card="{{ site.slug }}"
            data-site-name="{{ site.name }}"
            data-site-default="{{ 'true' if site.isActive else 'false' }}"
          >
            <header class="flex items-center justify-between">
              <h3 class="text-base font-semibold font-['Outfit']">{{ site.name }}</h3>
              <span class="text-xs px-2 py-0.5 rounded-full bg-[#9C6BFF]/10 text-[#9C6BFF] {% if not site.isActive %}hidden{% endif %}" data-site-active-badge>
                Actif
              </span>
            </header>
            <div class="text-sm text-slate-600 space-y-1">
              <p>Slug : {{ site.slug }}</p>
              <p>Chemin de sortie : {{ site.outputPath }}</p>
              <p>
                Dernier d√©ploiement :
                {{ site.lastDeployment or 'Jamais d√©ploy√©' }}
              </p>
            </div>
            <footer class="flex items-center justify-between gap-2 flex-wrap">
              <button
                class="text-sm inline-flex justify-center flex-1 rounded-lg bg-[#1E1E1E] text-white py-2"
                data-site-select="{{ site.slug }}"
                data-site-select-name="{{ site.name }}"
                aria-label="Travailler sur le site {{ site.name }}"
              >
                Travailler sur ce site
              </button>
              <button class="text-sm text-slate-600 hover:text-slate-900 px-2 py-1">
                Configurer
              </button>
            </footer>
          </article>
        {% endfor %}
      </section>
    {% else %}
      <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8 text-center space-y-4">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-[#9C6BFF]/10 text-[#9C6BFF] text-2xl">
          ‚ú®
        </div>
        <div class="space-y-2">
          <p class="text-lg font-semibold text-slate-900">Aucun site encore.</p>
          <p class="text-sm text-slate-600">Cr√©e ton premier site pour commencer üöÄ</p>
        </div>
        <button
          type="button"
          data-site-create
          class="inline-flex items-center justify-center rounded-xl bg-[#9C6BFF] px-4 py-2 text-sm font-medium text-white hover:bg-[#8654f5] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#9C6BFF]"
        >
          Cr√©er un site
        </button>
      </section>
    {% endif %}
  </div>

  <div
    data-site-modal
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 px-4"
    role="dialog"
    aria-modal="true"
    aria-labelledby="site-modal-title"
  >
    <div class="w-full max-w-md rounded-2xl bg-white p-6 shadow-2xl space-y-5">
      <div class="flex items-start justify-between gap-4">
        <div>
          <h2 id="site-modal-title" class="text-lg font-semibold text-slate-900">Cr√©er un site</h2>
          <p class="text-sm text-slate-600">Ajoute un nom et un slug pour d√©marrer un nouveau projet.</p>
        </div>
        <button
          type="button"
          data-site-modal-cancel
          class="text-slate-500 hover:text-slate-900 text-sm"
          aria-label="Fermer la fen√™tre de cr√©ation de site"
        >
          ‚úï
        </button>
      </div>
      <form data-site-form class="space-y-4">
        <label class="block space-y-2">
          <span class="text-sm font-medium text-slate-800">Nom du site</span>
          <input
            type="text"
            name="siteName"
            data-site-name
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#9C6BFF] focus:border-[#9C6BFF]"
            placeholder="Ex : Clower Studio"
            required
          />
        </label>
        <label class="block space-y-2">
          <span class="text-sm font-medium text-slate-800">Slug</span>
          <input
            type="text"
            name="siteSlug"
            data-site-slug
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#9C6BFF] focus:border-[#9C6BFF]"
            placeholder="Ex : clower-studio"
            required
          />
          <p data-site-slug-error class="text-xs text-red-600 min-h-[1rem]"></p>
        </label>
        <p data-site-modal-error class="text-sm text-red-600 min-h-[1rem]"></p>
        <div class="flex items-center justify-end gap-2 pt-2">
          <button
            type="button"
            data-site-modal-cancel
            class="rounded-xl border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:text-slate-900"
          >
            Annuler
          </button>
          <button
            type="submit"
            data-site-modal-submit
            class="inline-flex items-center rounded-xl bg-[#9C6BFF] px-4 py-2 text-sm font-medium text-white hover:bg-[#8654f5] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#9C6BFF]"
          >
            Cr√©er
          </button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  {{ super() }}
{% endblock %}

