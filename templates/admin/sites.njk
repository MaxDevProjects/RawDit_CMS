          <article
            class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4 flex flex-col gap-3 transition-all"
            data-site-card="{{ site.slug }}"
            data-site-name="{{ site.name }}"
            data-site-default="{{ 'true' if site.isActive else 'false' }}"
          >
            <header class="flex items-center justify-between">
              <h3 class="text-base font-semibold font-['Outfit']">{{ site.name }}</h3>
              <span class="text-xs px-2 py-0.5 rounded-full bg-[#9C6BFF]/10 text-[#9C6BFF] {% if not site.isActive %}hidden{% endif %}" data-site-active-badge>
                Actif
              </span>
            </header>
            <div class="text-sm text-slate-600 space-y-1">
              <p>Slug : {{ site.slug }}</p>
