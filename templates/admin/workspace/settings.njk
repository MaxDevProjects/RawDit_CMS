{% extends "layout_workspace.njk" %}
{% set pageTitle = "Paramètres" %}
{% set activeWorkspaceTab = "settings" %}

{% block sidebar_start %}
  <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
    <h2 class="text-sm font-semibold mb-2">Accès</h2>
    <p class="text-sm text-slate-600">Rôles, permissions et intégrations du site actif.</p>
  </section>
{% endblock %}

{% block content_main %}
  <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6 space-y-6">
    <div class="space-y-1">
      <p class="text-xs uppercase tracking-tight text-slate-500">Compte</p>
      <h1 class="text-xl font-semibold text-slate-900">Compte administrateur</h1>
      <p class="text-sm text-slate-600">Change ton mot de passe d’accès à l’atelier.</p>
    </div>
    <form data-admin-password-form class="space-y-4 max-w-lg">
      <label class="space-y-1 block">
        <span class="text-xs font-semibold text-slate-600">Mot de passe actuel</span>
        <input
          type="password"
          name="currentPassword"
          autocomplete="current-password"
          class="w-full rounded-xl border border-slate-300 px-3 py-2 text-sm focus:border-[#9C6BFF] focus:ring-[#9C6BFF]"
          required
        />
      </label>
      <label class="space-y-1 block">
        <span class="text-xs font-semibold text-slate-600">Nouveau mot de passe</span>
        <input
          type="password"
          name="newPassword"
          autocomplete="new-password"
          class="w-full rounded-xl border border-slate-300 px-3 py-2 text-sm focus:border-[#9C6BFF] focus:ring-[#9C6BFF]"
          required
        />
      </label>
      <label class="space-y-1 block">
        <span class="text-xs font-semibold text-slate-600">Confirmation</span>
        <input
          type="password"
          name="confirmPassword"
          autocomplete="new-password"
          class="w-full rounded-xl border border-slate-300 px-3 py-2 text-sm focus:border-[#9C6BFF] focus:ring-[#9C6BFF]"
          required
        />
      </label>
      <div class="flex items-center justify-between gap-3">
        <p data-admin-password-feedback role="status" class="text-sm text-slate-500"></p>
        <button
          type="submit"
          data-admin-password-submit
          class="inline-flex items-center gap-2 rounded-xl bg-[#9C6BFF] px-4 py-2 text-sm font-semibold text-white hover:bg-[#8654f5]"
        >
          Mettre à jour
        </button>
      </div>
    </form>
  </section>
{% endblock %}

{% block sidebar_end %}
  <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
    <h2 class="text-sm font-semibold mb-2">Support</h2>
    <p class="text-sm text-slate-600">Contacts, SLA et procédures seront listés ici.</p>
  </section>
{% endblock %}
