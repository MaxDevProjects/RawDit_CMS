{% set workspaceTabs = [
  { id: 'design', label: 'Design' },
  { id: 'content', label: 'Contenus' },
  { id: 'media', label: 'Médias' },
  { id: 'deploy', label: 'Déploiement' },
  { id: 'settings', label: 'Paramètres' }
] %}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ (pageTitle | default(false)) and (pageTitle ~ ' • ') or '' }}{{ data.admin.title }}
    </title>
    <link rel="stylesheet" href="/admin/assets/admin.css" />
    {% block head %}{% endblock %}
  </head>
  <body class="min-h-screen bg-[#F8FAFC] font-['Inter'] text-[#1E1E1E] antialiased">
    <header class="bg-white border-b border-slate-200">
      <div class="max-w-6xl mx-auto px-4 py-4 space-y-3">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <div class="flex items-center gap-3">
            <a
              href="/admin/sites"
              data-workspace-back
              class="inline-flex items-center gap-1 text-sm font-semibold text-[#1E1E1E] hover:text-[#9C6BFF]"
            >
              ← Retour à mes sites
            </a>
            {% block workspace_header_left %}{% endblock %}
          </div>
          <div class="flex items-center gap-2">
            {% block workspace_header_quick_actions %}{% endblock %}
            <button
              type="button"
              data-logout
              class="text-sm text-slate-600 hover:text-slate-900 px-3 py-1.5 rounded-lg border border-slate-200"
            >
              Se déconnecter
            </button>
          </div>
        </div>
        <div class="flex flex-wrap items-center justify-between gap-3">
          <div class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
            <span class="uppercase tracking-wide">Site</span>
            <span data-workspace-site-name class="text-sm font-semibold text-slate-900">Site actif</span>
          </div>
          <div class="flex w-full flex-wrap items-center justify-end gap-2 sm:w-auto" data-workspace-header-actions>
            {% block workspace_header_actions %}{% endblock %}
          </div>
        </div>
      </div>
      <nav class="border-t border-slate-200" aria-label="Navigation workspace">
        <ul class="max-w-6xl mx-auto flex items-center gap-6 overflow-x-auto px-4 py-2 text-sm">
          {% for tab in workspaceTabs %}
            {% set isActive = activeWorkspaceTab == tab.id %}
            <li>
              <a
                href="{{tab.id}}"
                data-workspace-tab="{{ tab.id }}"
                class="pb-2 border-b-2 {{ 'border-[#9C6BFF] text-slate-900' if isActive else 'border-transparent text-slate-600 hover:text-slate-900' }}"
                {% if isActive %}aria-current="page"{% endif %}
              >
                {{ tab.label }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </header>

    <div data-site-toast role="status" aria-live="polite" class="fixed top-20 inset-x-0 z-50 hidden pointer-events-none">
      <div class="mx-auto w-fit rounded-full bg-slate-900/90 px-4 py-2 text-xs font-medium text-white shadow-lg pointer-events-auto" data-site-toast-message></div>
    </div>

    <div class="max-w-6xl w-full mx-auto grid grid-cols-1 gap-4 px-4 py-6 lg:grid-cols-[280px_1fr_320px] lg:gap-6 lg:items-start">
      <aside class="space-y-4">
        {% block sidebar_start %}
          <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
            <p class="text-sm text-slate-600">Navigation contextualisée.</p>
          </section>
        {% endblock %}
      </aside>

      <main class="space-y-4" id="workspace-main">
        {% block content_main %}
          <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
            <p class="text-sm text-slate-600">Contenu du workspace.</p>
          </section>
        {% endblock %}
      </main>

      <aside class="space-y-4 sticky top-8" aria-label="Panneau latéral">
        {% block sidebar_end %}
          <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
            <p class="text-sm text-slate-600">Panneau latéral.</p>
          </section>
        {% endblock %}
      </aside>
    </div>

    <div
      data-workspace-back-modal
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 px-4"
      role="dialog"
      aria-modal="true"
      aria-labelledby="workspace-back-title"
    >
      <div class="w-full max-w-md rounded-2xl bg-white p-6 shadow-2xl space-y-4">
        <div class="flex items-start justify-between gap-4">
          <div>
            <h2 id="workspace-back-title" class="text-lg font-semibold text-slate-900">
              Quitter l’édition de <span data-workspace-back-name>ce site</span> ?
            </h2>
            <p class="text-sm text-slate-600" data-workspace-back-message>
              Tu vas revenir à la liste de tes sites. Tes modifications non déployées restent enregistrées.
            </p>
          </div>
          <button
            type="button"
            data-workspace-back-cancel
            class="text-slate-500 hover:text-slate-900 text-sm"
            aria-label="Fermer la confirmation"
          >
            ✕
          </button>
        </div>
        <div class="flex items-center justify-end gap-2">
          <button
            type="button"
            data-workspace-back-cancel
            class="rounded-xl border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:text-slate-900"
          >
            Annuler
          </button>
          <button
            type="button"
            data-workspace-back-confirm
            class="inline-flex items-center rounded-xl bg-[#9C6BFF] px-4 py-2 text-sm font-medium text-white hover:bg-[#8654f5]"
          >
            Retour à mes sites
          </button>
        </div>
      </div>
    </div>

    {% block modals %}{% endblock %}

    <script src="/admin/assets/admin.js" defer></script>
    {% block scripts %}{% endblock %}
  </body>
</html>
