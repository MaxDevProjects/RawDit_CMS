{% set adminTabs = [
  { label: 'Sites', href: '/admin/sites.html', section: null },
  { label: 'Design', href: '#', section: 'design' },
  { label: 'Contenus', href: '#', section: 'content' },
  { label: 'Médias', href: '#', section: 'media' },
  { label: 'Déploiement', href: '#', section: 'deploy' },
  { label: 'Paramètres', href: '#', section: 'settings' }
] %}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ (pageTitle | default(false)) and (pageTitle ~ ' • ') or '' }}{{ data.admin.title }}
    </title>
    <link rel="stylesheet" href="/admin/assets/admin.css" />
    {% block head %}{% endblock %}
  </head>
  <body class="min-h-screen bg-[#F8FAFC] font-['Inter'] text-[#1E1E1E] antialiased">
    <header class="bg-white border-b border-slate-200 relative">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <span class="text-sm font-['Outfit'] tracking-[0.25em] text-slate-500 uppercase">
            CLOWEREDIT
          </span>
          <span class="hidden text-xs text-slate-500 sm:inline-flex">
            Site :
            <span
              data-current-site-name
              data-default-site-name="{{ data.site.title }}"
              class="font-semibold text-slate-900 ml-1"
            >
              {{ data.site.title }}
            </span>
          </span>
        </div>
        <button
          type="button"
          data-admin-sidebar-toggle
          class="inline-flex items-center rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600 hover:text-slate-900 lg:hidden"
        >
          Menu
        </button>
        {% set isHubView = activeTab == 'Sites' %}
        {% if not isHubView %}
          <nav class="hidden lg:flex items-center gap-6 text-sm" aria-label="Navigation admin">
            {% for tab in adminTabs %}
              {% set isActive = tab.label == activeTab %}
              <a
                href="{{ tab.href }}"
                class="pb-2 border-b-2 {{ 'border-[#9C6BFF] text-slate-900' if isActive else 'border-transparent text-slate-600 hover:text-slate-900' }}"
                {% if isActive %}aria-current="page"{% endif %}
              >
                {{ tab.label }}
              </a>
            {% endfor %}
          </nav>
        {% endif %}
        <button
          type="button"
          data-logout
          class="text-sm text-slate-600 hover:text-slate-900 px-3 py-1.5 rounded-lg border border-slate-200"
        >
          Se déconnecter
        </button>
      </div>
      {% if not isHubView %}
        <nav class="lg:hidden border-t border-slate-200">
          <ul class="flex items-center gap-4 overflow-x-auto px-4 py-2 text-sm" aria-label="Navigation admin mobile">
            {% for tab in adminTabs %}
              {% set isActive = tab.label == activeTab %}
              <li>
                <a
                  href="{{ tab.href }}"
                  class="pb-2 border-b-2 {{ 'border-[#9C6BFF] text-slate-900' if isActive else 'border-transparent text-slate-600 hover:text-slate-900' }}"
                  {% if isActive %}aria-current="page"{% endif %}
                >
                  {{ tab.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </header>

    <div data-admin-sidebar-overlay class="fixed inset-0 z-40 hidden bg-black/40 backdrop-blur-sm lg:hidden"></div>
    <div
      data-site-toast
      role="status"
      aria-live="polite"
      class="fixed top-20 inset-x-0 z-50 hidden pointer-events-none"
    >
      <div class="mx-auto w-fit rounded-full bg-slate-900/90 px-4 py-2 text-xs font-medium text-white shadow-lg pointer-events-auto" data-site-toast-message></div>
    </div>

    <div class="max-w-6xl w-full mx-auto grid grid-cols-1 gap-4 px-4 py-6 lg:grid-cols-[280px_1fr_320px] lg:gap-6 lg:items-start">
      <aside
        data-admin-sidebar
        class="hidden lg:block space-y-4"
        aria-label="Navigation latérale"
      >
        <div class="fixed inset-y-0 left-0 z-50 w-80 max-w-[90vw] overflow-y-auto bg-white p-6 shadow-xl lg:relative lg:inset-auto lg:z-auto lg:w-auto lg:max-w-none lg:rounded-2xl lg:border lg:border-slate-200 lg:shadow-sm">
          <div class="flex items-center justify-between pb-4 lg:hidden">
            <p class="text-base font-semibold text-slate-900">Menu</p>
            <button
              type="button"
              data-admin-sidebar-close
              class="inline-flex items-center rounded-full border border-slate-200 px-3 py-1.5 text-sm text-slate-600 hover:text-slate-900"
            >
              Fermer
            </button>
          </div>
          <div class="space-y-4">
            {% block sidebar_start %}
              <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
                <p class="text-sm text-slate-600">Contenu spécifique à la page.</p>
              </section>
            {% endblock %}
          </div>
        </div>
      </aside>

      <main class="space-y-4" id="main-content">
        {% block content_main %}
          <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
            <p class="text-sm text-slate-600">Zone principale.</p>
          </section>
        {% endblock %}
      </main>

      <aside class="space-y-4" aria-label="Panneau latéral">
        {% block sidebar_end %}
          <section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4">
            <p class="text-sm text-slate-600">Panneau d’options.</p>
          </section>
        {% endblock %}
      </aside>
    </div>

    <script src="/admin/assets/admin.js" defer></script>
    {% block scripts %}{% endblock %}
  </body>
</html>
