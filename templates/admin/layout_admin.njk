{% set adminTabs = [
  { label: 'Sites', href: '/admin/sites.html' },
  { label: 'Design', href: '/admin/design.html' },
  { label: 'Contenus', href: '/admin/content.html' },
  { label: 'Médias', href: '/admin/medias.html' },
  { label: 'Déploiement', href: '/admin/deploy.html' },
  { label: 'Paramètres', href: '/admin/settings.html' }
] %}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ (pageTitle | default(false)) and (pageTitle ~ ' • ') or '' }}{{ data.admin.title }}
    </title>
    <link rel="stylesheet" href="/admin/assets/admin.css" />
    {% block head %}{% endblock %}
  </head>
  <body class="bg-slate-950 text-slate-100">
    <div class="min-h-screen flex flex-col gap-4 px-4 py-4 sm:px-6 lg:gap-6 lg:py-6">
      <header class="rounded-3xl border border-slate-800 bg-slate-900/70 p-4 shadow-lg">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <div class="flex min-w-0 flex-1 items-center gap-3">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-2xl border border-slate-800 bg-white/5 text-lg font-bold text-slate-100 shadow-lg">
              CL
            </div>
            <div class="min-w-0">
              <p class="text-xs uppercase tracking-[0.4em] text-slate-500">Admin</p>
              <h1 class="truncate text-2xl font-bold text-white">{{ pageTitle or 'Administration' }}</h1>
              <p class="text-sm text-slate-400">{{ data.site.title }}</p>
            </div>
          </div>
          <div class="flex flex-wrap items-center gap-2">
            <button
              type="button"
              data-admin-sidebar-toggle
              class="inline-flex items-center gap-2 rounded-full border border-slate-700 px-3 py-2 text-sm font-semibold text-slate-200 transition hover:bg-slate-800 hover:text-white lg:hidden"
            >
              Menu
            </button>
            <button
              type="button"
              data-logout
              class="rounded-full border border-slate-700 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-200 transition hover:bg-slate-800 hover:text-white"
            >
              Déconnexion
            </button>
          </div>
        </div>
        <nav class="mt-4 flex gap-2 overflow-x-auto rounded-2xl border border-slate-800 bg-slate-950/40 p-2 text-sm" aria-label="Navigation admin">
          {% for tab in adminTabs %}
            <a
              href="{{ tab.href }}"
              class="whitespace-nowrap rounded-full px-4 py-2 font-semibold transition-colors {% if tab.label == activeTab %}bg-white text-slate-900 shadow-lg{% else %}border border-slate-800 text-slate-400 hover:border-slate-600 hover:text-white{% endif %}"
              {% if tab.label == activeTab %}aria-current="page"{% endif %}
            >
              {{ tab.label }}
            </a>
          {% endfor %}
        </nav>
      </header>

      <div data-admin-sidebar-overlay class="fixed inset-0 z-40 hidden bg-black/70 backdrop-blur-sm lg:hidden"></div>

      <div class="flex flex-col gap-4 lg:grid lg:grid-cols-[minmax(0,260px)_minmax(0,1fr)_minmax(0,280px)]">
        <aside
          data-admin-sidebar
          class="hidden lg:block lg:min-h-[240px]"
          aria-label="Menu latéral"
        >
          <div class="fixed inset-y-0 left-0 z-50 w-80 max-w-[90vw] overflow-y-auto rounded-r-3xl border border-slate-800 bg-slate-950/95 p-4 shadow-2xl lg:relative lg:inset-auto lg:z-auto lg:w-auto lg:max-w-none lg:overflow-visible lg:border-none lg:bg-transparent lg:p-0 lg:shadow-none">
            <div class="flex items-center justify-between pb-4 lg:hidden">
              <p class="text-base font-semibold text-white">Menu</p>
              <button
                type="button"
                data-admin-sidebar-close
                class="inline-flex items-center rounded-full border border-slate-700 px-3 py-1.5 text-sm text-slate-200 hover:bg-slate-800"
              >
                Fermer
              </button>
            </div>
            <div class="admin-card flex h-full flex-col gap-4">
              {% block sidebar_start %}
                <p class="text-sm text-slate-400">Contenu spécifique à la page.</p>
              {% endblock %}
            </div>
          </div>
        </aside>

        <main class="order-1 flex flex-col gap-4 rounded-3xl border border-slate-800 bg-slate-900/60 p-4 shadow-xl lg:order-none lg:bg-transparent lg:p-0 lg:shadow-none">
          <div class="admin-card flex h-full flex-col gap-4">
            {% block content_main %}
              <p class="text-sm text-slate-400">Zone principale. Ajoutez ici les aperçus ou les listes centralisées.</p>
            {% endblock %}
          </div>
        </main>

        <aside class="order-2 rounded-3xl border border-slate-800 bg-slate-900/60 p-4 shadow-xl lg:order-none lg:bg-transparent lg:p-0 lg:shadow-none">
          <div class="admin-card flex h-full flex-col gap-4">
            {% block sidebar_end %}
              <p class="text-sm text-slate-400">Panneau d’options.</p>
            {% endblock %}
          </div>
        </aside>
      </div>
    </div>
    <script src="/admin/assets/admin.js" defer></script>
    {% block scripts %}{% endblock %}
  </body>
</html>
