{
  "name": "clower-edit",
  "version": "1.0.0",
  "description": "Clower Edit V1 - low tech CMS for static site generation",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:serve\" \"npm:tailwind:watch\" \"npm:theme:watch\"",
    "serve": "NODE_ENV=development node server.js",
    "tailwind:watch": "tailwindcss -c tailwind.config.js -i ./admin/styles.css -o ./public/assets/css/tailwind.css --watch",
    "theme:watch": "node backend/services/watcher.js",
    "build:css": "tailwindcss -c tailwind.config.js -i ./admin/styles.css -o ./public/assets/css/tailwind.css --minify",
    "build:js": "esbuild frontend/site/main.js --bundle --minify --platform=browser --target=es2018 --outfile=public/assets/js/main.js",
    "build": "npm run build:css && npm run build:js && node backend/scripts/generate.js",
    "deploy": "node backend/scripts/deploy.js"
  },
  "dependencies": {
    "alpinejs": "^3.13.10",
    "basic-ftp": "^5.0.4",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nunjucks": "^3.2.4",
    "sharp": "^0.33.4",
    "ssh2-sftp-client": "^10.0.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "esbuild": "^0.27.0",
    "tailwindcss": "^4.0.0"
  }
}
